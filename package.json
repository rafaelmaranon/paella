{
  "name": "spanish-cuisine-ai",
  "version": "1.0.0",
  "description": "AI-powered Spanish cuisine app with semantic search and cooking assistance",
  "type": "module",
  "scripts": {
    "dev:api": "tsx src/server.ts",
    "dev:embed": "tsx scripts/buildEmbeddings.ts",
    "dev:tag": "tsx scripts/tagAllergens.ts",
    "dev:web": "python3 -m http.server 8080",
    "start": "npm run dev:api"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "openai": "^4.60.0"
  },
  "devDependencies": {
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0"
  },
  "keywords": ["spanish", "cuisine", "paella", "tapas", "ai", "cooking"],
  "author": "Rafael Maranon",
  "license": "MIT"
}
